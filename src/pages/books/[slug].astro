---
import { getCollection, getEntryBySlug } from "astro:content";
import Layout from "../../layouts/Layout.astro";
import Newsletter from "../../components/Newsletter.astro";

/* 1. Build-time list of paths */
export async function getStaticPaths() {
  const books = await getCollection("books");
  return books.map((b) => ({ params: { slug: b.slug } }));
}

/* 2. Load the specific book by slug */
const { slug } = Astro.params;
const book = await getEntryBySlug("books", slug);
if (!book) throw new Error(`Book not found: ${slug}`);

const {
  data: { title, author, summary, tags, rating, cover, date, readMinutes },
  render,
} = book;

const { Content } = await render();

// Get other books for recommendations
const allBooks = await getCollection("books");
const otherBooks = allBooks.filter(b => b.slug !== slug).slice(0, 3);
---

<Layout title={`${title} ‚Äì Book Summary`} description={`${title} by ${author}: ${summary}`}>
  {(() => {
    const obj = {
      "@context": "https://schema.org",
      "@type": "Book",
      name: title,
      author: { "@type": "Person", name: author },
      image: new URL(cover, Astro.site).href,
      datePublished: date.toISOString().split('T')[0],
      url: new URL(Astro.url.pathname, Astro.site).href,
      aggregateRating: { "@type": "AggregateRating", ratingValue: rating, reviewCount: 1 }
    };
    return (
      <Fragment slot="head">
        <script type="application/ld+json" is:inline>{JSON.stringify(obj)}</script>
      </Fragment>
    );
  })()}
  <!-- Hero Section with Book Info -->
  <section class="bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 text-white py-16 book-hero-section">
    <div class="max-w-6xl mx-auto px-4 page-container">
      <div class="grid lg:grid-cols-3 gap-12 items-start">
        <!-- Book Cover -->
        <div class="lg:col-span-1 flex justify-center">
          <div class="relative group book-cover-container">
            <img 
              src={cover} 
              alt={`Cover of ${title}`} 
              class="w-full max-w-sm mx-auto rounded-2xl shadow-2xl group-hover:scale-105 transition-transform duration-300" 
              loading="lazy" 
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
        </div>
        
        <!-- Book Details -->
        <div class="lg:col-span-2 space-y-6 book-details">
          <div>
            <h1 class="text-4xl md:text-5xl font-bold mb-4 bg-gradient-to-r from-white to-gray-300 bg-clip-text text-transparent">
              {title}
            </h1>
            <p class="text-xl text-primary-300 font-medium mb-2 author">by {author}</p>
            
            <!-- Rating -->
            <div class="flex items-center space-x-2 mb-4">
              <div class="flex items-center">
                {Array.from({ length: 5 }).map((_, i) => {
                  const starValue = i + 1;
                  const diff = rating - i;
                  
                  if (diff >= 1) {
                    // Full star
                    return (
                      <svg class="w-5 h-5 text-accent-400" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    );
                  } else if (diff > 0) {
                    // Partial star
                    const percent = Math.round(diff * 100);
                    return (
                      <svg class="w-5 h-5" viewBox="0 0 24 24">
                        <defs>
                          <linearGradient id={`star-fill-${i}`} x1="0%" y1="0%" x2="100%" y2="0%">
                            <stop offset={`${percent}%`} stop-color="currentColor" class="text-accent-400" />
                            <stop offset={`${percent}%`} stop-color="currentColor" class="text-gray-600" />
                          </linearGradient>
                        </defs>
                        <path fill={`url(#star-fill-${i})`} d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    );
                  } else {
                    // Empty star
                    return (
                      <svg class="w-5 h-5 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                      </svg>
                    );
                  }
                })}
              </div>
              <span class="text-gray-300 font-medium">{rating}/5</span>
            </div>
            
            <!-- Summary -->
            <p class="text-lg text-gray-300 leading-relaxed mb-6 summary">{summary}</p>
            
            <!-- Tags -->
            <div class="flex flex-wrap gap-2 mb-6 book-tags">
              {tags.map(tag => (
                <span class="bg-primary-600/30 text-primary-200 px-3 py-1 rounded-full text-sm font-medium backdrop-blur-sm">
                  {tag}
                </span>
              ))}
            </div>
            
            <!-- Meta Info -->
            <div class="flex items-center space-x-6 text-sm text-gray-400 book-meta">
              <span>üìÖ {date.toLocaleDateString()}</span>
              <span>‚è±Ô∏è {readMinutes ? `${readMinutes.min}${readMinutes.max ? `-${readMinutes.max}` : ''} min read` : '8-10 min read'}</span>
              <span>üéØ Key insights</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="py-16 bg-white">
    <div class="max-w-4xl mx-auto px-4 page-container">
      <!-- Content with enhanced typography -->
      <div class="prose prose-lg prose-primary max-w-none book-content">
        <Content />
      </div>
      
      <!-- Action Buttons -->
      <div class="mt-12 flex flex-col sm:flex-row gap-4 justify-center action-buttons">
        <button id="save-summary-btn" class="btn-primary px-8 py-3 rounded-xl font-semibold text-lg bg-primary-600 hover:bg-primary-700 transition-colors">
          üíæ Save Summary
        </button>
        <a href="/books" class="btn-secondary px-8 py-3 rounded-xl font-semibold text-lg bg-gray-100 hover:bg-gray-200 text-gray-700 transition-colors text-center">
          üìö More Summaries
        </a>
      </div>

      <!-- Inline Newsletter -->
      <div class="mt-16 p-8 bg-gradient-to-r from-primary-50 to-accent-50 rounded-2xl border border-primary-100 newsletter-form">
        <Newsletter 
          variant="inline"
          title="Loved this summary?"
          subtitle="Get more great book summaries delivered to your inbox weekly."
          placeholder="Your email address"
          buttonText="Get Updates"
        />
      </div>
    </div>
  </article>

  <!-- Recommendations Section -->
  {otherBooks.length > 0 && (
    <section class="py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 page-container">
        <div class="text-center mb-8 md:mb-12">
          <h2 class="text-3xl font-bold text-gray-900 mb-4">You Might Also Like</h2>
          <p class="text-lg text-gray-600">More great book summaries to expand your knowledge</p>
        </div>
        
        <div class="grid md:grid-cols-3 gap-8 recommendations-grid">
          {otherBooks.map(({ slug: otherSlug, data: { title: otherTitle, author: otherAuthor, summary: otherSummary, cover: otherCover } }) => (
            <article class="book-card group">
              <a href={`/books/${otherSlug}/`} class="block">
                <div class="relative overflow-hidden">
                  <img 
                    src={otherCover} 
                    alt={`Cover of ${otherTitle}`} 
                    class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300" 
                    loading="lazy" 
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-black/20 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </div>
                <div class="p-6">
                  <h3 class="text-xl font-semibold text-gray-900 mb-2 group-hover:text-primary-600 transition-colors">
                    {otherTitle}
                  </h3>
                  <p class="text-sm text-primary-600 font-medium mb-3">by {otherAuthor}</p>
                  <p class="text-gray-600 text-sm line-clamp-3">{otherSummary}</p>
                </div>
              </a>
            </article>
          ))}
        </div>
      </div>
    </section>
  )}
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const saveButton = document.getElementById('save-summary-btn');
    
    if (saveButton) {
      saveButton.addEventListener('click', function() {
        // Get book data from the page
        const bookTitle = document.querySelector('h1').textContent.trim();
        const author = document.querySelector('.author').textContent.replace('by ', '').trim();
        const summary = document.querySelector('.summary').textContent.trim();
        const rating = document.querySelector('.text-gray-300.font-medium').textContent.trim();
        
        // Get tags
        const tagElements = document.querySelectorAll('.book-tags span');
        const tags = Array.from(tagElements).map(tag => tag.textContent.trim());
        
        // Get the main content (the rendered markdown content)
        const contentElement = document.querySelector('.book-content');
        let contentText = '';
        
        if (contentElement) {
          // Extract text content while preserving some structure
          const paragraphs = contentElement.querySelectorAll('p, h1, h2, h3, h4, h5, h6, li');
          contentText = Array.from(paragraphs).map(p => {
            const tagName = p.tagName.toLowerCase();
            const text = p.textContent.trim();
            
            if (tagName.startsWith('h')) {
              const level = parseInt(tagName.charAt(1));
              return '#'.repeat(level) + ' ' + text;
            } else if (tagName === 'li') {
              return '- ' + text;
            } else {
              return text;
            }
          }).filter(text => text.length > 0).join('\n\n');
        }
        
        // Create the markdown content
        const markdownContent = `# ${bookTitle}
**Author:** ${author}
**Rating:** ${rating}
**Tags:** ${tags.join(', ')}

## Summary
${summary}

---

${contentText}

---

*Downloaded from BookDigest Club - ${window.location.href}*
*Generated on ${new Date().toLocaleDateString()}*`;

        // Create and trigger download
        const blob = new Blob([markdownContent], { type: 'text/plain' });
        const url = URL.createObjectURL(blob);
        const a = document.createElement('a');
        
        // Create a safe filename
        const safeTitle = bookTitle.toLowerCase()
          .replace(/[^a-z0-9\s-]/g, '') // Remove special characters
          .replace(/\s+/g, '-')         // Replace spaces with hyphens
          .replace(/-+/g, '-')          // Replace multiple hyphens with single
          .trim();
        
        a.href = url;
        a.download = `${safeTitle}-summary.txt`;
        document.body.appendChild(a);
        a.click();
        document.body.removeChild(a);
        URL.revokeObjectURL(url);
        
        // Optional: Show a brief success message
        const originalText = saveButton.textContent;
        saveButton.textContent = '‚úÖ Saved!';
        saveButton.style.backgroundColor = '#10b981';
        
        setTimeout(() => {
          saveButton.textContent = originalText;
          saveButton.style.backgroundColor = '';
        }, 2000);
      });
    }
  });
</script>
